<% include partials/header %>

<div class="container">
  <form>
    <div class="form-group row col-form-label">
      <label class="col-md-2" for="gymName">Gym name</label>
      <div class='col-md-10'>
        <input type="text" class="form-control" id="gymName">
      </div>
    </div>

    <div class="form-group row col-form-label">
      <label class="col-md-2" for="gymName">Owner</label>
      <div class='col-md-10'>
        <input type="text" class="form-control" id="gymOwner">
      </div>
    </div>

    <div class="form-group row col-form-label">
      <label class="col-md-2" for="gymAddress">Address</label>
      <div class='col-md-10'>
        <input type="text" class="form-control" id="gymAddress">
      </div>
    </div>

    <div class="form-group row col-form-label">
      <label class="col-md-2" for="gymWebsite">Website</label>
      <div class='col-md-10'>
        <input type="text" class="form-control" id="gymWebsite">
      </div>
    </div>

    <div class="form-group row col-form-label">
      <label class="col-md-2" for="gymImage">Image URL</label>
      <div class='col-md-10'>
        <input type="text" class="form-control" id="gymImage">
      </div>
    </div>

    <div class="form-group row col-form-label">
      <label class="col-md-2" for="gymInstagram">Instagram</label>
      <div class='col-md-10'>
        <input type="text" class="form-control" id="gymInstagram">
      </div>
    </div>

    <div class="form-group row col-form-label">
      <label class="col-md-2" for="gymFacebook">Facebook</label>
      <div class='col-md-10'>
        <input type="text" class="form-control" id="gymFacebook">
      </div>
    </div>

    <div class="form-group row col-form-label">
      <label class="col-md-2" for="gymPhone">Phone number</label>
      <div class='col-md-10'>
        <input type="text" class="form-control" id="gymPhone">
      </div>
    </div>

    <label>Equipment</label>
    <div id="equipment-select">
      <!-- Children of #equipment-select to be itereated for query params -->
      <div class="form-row">
        <div class="form-group col-md-2">
          <input type="number" class="equipment-quantity form-control" id="quantity"></input>
        </div>
        <div class="form-group col-md-8">
          <select id="equipment" name="equipment" class="equipment-choice form-group col-md-8">
            <% if(available){ %>
              <% available.forEach(function(type){ %>
                <option value="<%= type.equipment_id %>"><%= type.equipment_name %></option>
              <% }) %>
              <%} %>
          </select>
        </div>
        <div id="more-button-container" class="form-group col-md-1">
          <button id="more-button" type="button" class="btn btn-primary">More</button>
        </div>
      </div>
    </div>

    <button id="submitGym" type="button" class="btn btn-primary">Submit</button>
  </form>
</div>

<script src="/scripts/new.js"></script>

<% include partials/footer %>
