<% include partials/header %>

<div class="container">

  <h1>Find great gyms near you.</h1>

  <div class="container-fluid">
    <div class="row map-container">
        <div class="col-lg-6">
          <form>
            <div class="form-group">
              <label for="exampleInputEmail1">Address</label>
              <input type="text" class="form-control" id="address" placeholder="Street, City, State, 5-digit zip">
            </div>
          </form>
        </div>
        <div class="col-lg-6">
          <div><select id="locationSelect" style="width: 100%; visibility: hidden"></select></div>
          <div id="map"></div>
        </div>
    </div>
  </div>

  <div class = "container">
    <div class="container>"
      <span style="white-space: nowrap"><p>Find gyms within <input type="text" class="form-control col-md-1" id="distance"></input> miles</p></span>

      <p>Find gyms with at least...</p>
      <form>
        <div class="form-row">
          <div class="form-group col-md-2">
            <input type="text" class="form-control" id="quantity"></input>
          </div>
          <div class="form-group col-md-10">
            <select id="equipment" name="equipment">
              <% if(available){ %>
                <% available.forEach(function(type){ %>
                  <option value="<%= type.equipment_id %>"><%= type.equipment_name %></option>
                <% }) %>
                <%} %>
            </select>
          </div>
        </div>
      </form>
      <button type="button" class="btn btn-primary" id="search">Search</button>
    </div>

    <hr>

    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">Gym</th>
          <th scope="col">City</th>
          <th scope="col">State</th>
          <th scope="col">Distance (miles)</th>
        </tr>
      </thead>
      <tbody id="gym-table">
      </tbody>
    </table>
  </div>

</div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCT2hTK5nAFb3g9g0_dElmTyh5j-UX1dXA"></script>
<script src="./scripts/maps.js"></script>
<script src="./scripts/gyms.js"></script>
<% include partials/footer %>
